- content_for :sidebarmenu do
  -#= render(:partial => "libraries/libraries", :object => @library)
  = render(:partial => "libraries/libraries", :object => Library.all)
- content_for :box_1 do
  = render(:partial => "shared/cloud", :locals => { :tags => @tags}) 
%h2.main= @item.title
%p.navi &nbsp;
/<p class="navi"><a href="">TechLab</a> &gt; <a href="">Library</a> &gt; <a href="">Programming</a> &gt; <a href="">CSS and Xhtml</a> &gt; CSS Frameworks</p>
.box.boxArticles.boxArticle
  .item
    %p.info 
      = distance_of_time_in_words_to_now(@item.created_at) 
      by 
      = @item.user.login
      ,
      = @comments.size
      Comments
    .self
      %p= @item.perex
    .text= @item.description
    %br
    #tags=@item.tag_list.join(", ")
.box.boxForm
  .h
    %h3 Add new comment
  .in
    - form_for([@item, Comment.new]) do |f|
      %fieldset
        %legend Add new comment.
        .formBox
          = render :partial => 'comments/form', :locals => { :f => f }
        = submit_tag "Send comment", :class => 'submit'
.box.boxComments
  .h
    %h3 Comments
  .in
    - @comments.each do |comment|
      .item
        .head
          %h4
            = comment.user.login 
            | 
            = comment.title
          %p= distance_of_time_in_words_to_now(comment.created_at)
        .self
          %p= comment.comment
