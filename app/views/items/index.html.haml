- content_for :sidebarmenu do
  -#= render(:partial => "libraries/libraries", :object => @library)
  = render(:partial => "libraries/libraries", :object => Library.all)
- content_for :box_1 do
  = render(:partial => "shared/cloud", :locals => { :tags => @tags}) 
%h2.main
  Library / 
  = @library.title
%p.counter= "Found #{@items.total_entries} articles"
.box.boxArticles
  - @items.each_with_index do |item,index|
    - if(index == 0)
      .item.first
        %h3= link_to item.title, object_url(item)
        -#%p.info December 3, 2009 by <a href="">Jiří Langer</a>, <a href="">4 Comments</a>
        .self
          %p= truncate(item.perex, :length => 180, :omission => '&hellip;')
        %ul.actions
          %li= link_to 'Edit', edit_object_url(item), :class => 'ico edit'
    - else
      .item
        %h3= link_to item.title, object_url(item)
        -#%p.info December 3, 2009 by <a href="">Jiří Langer</a>, <a href="">4 Comments</a>
        .self
          %p= truncate(item.perex, :length => 180, :omission => '&hellip;')
        %ul.actions
          %li= link_to 'Edit', edit_object_url(item), :class => 'ico edit'
.paging
  = will_paginate @items

