- content_for :box_1 do
  = render(:partial => "layouts/recentpost_forum", :locals => { :posts => Post.new_posted })
%h2.main= @forum.title
-#%p.counter 123 topic(s), 965 post(s), 106 voice(s)
.forum
  %table.wide.topics{:cellspacing => 0, :cellpadding => 0, :border => 0}    
    %tr
      %th.la{:colspan => 2} Topic
      %th{:width => '1%'} Posts
      %th{:width => '1%'} Views
      %th.la Last Post
    = render(:partial => "topic_post", :collection => @topics)
.paging
  = will_paginate @topics
=link_to 'New topic', new_object_url