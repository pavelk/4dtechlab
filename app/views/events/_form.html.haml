%fieldset
  %legend
  .in
    .clearfix
      .lab
        = f.label :event_date, '*Event date'
      .con
        = f.date_select :event_date, :order => [:day, :month, :year], :use_month_numbers => false, :start_year => 2009, :class => 'button w100'
    .clearfix
      .lab
        = f.label :location, '*Location'
      .con
        = f.text_field :location, :class => 'button w100'
    .clearfix
      .lab
        = f.label :title, '*Title'
      .con
        = f.text_field :title, :class => 'button w100'
    .clearfix
      .lab
        = image_tag @event.eventphoto.url(:thumb)
        = f.label :eventphoto, 'Image'
      .con
        = f.file_field :eventphoto
        %p.info.offsetTop will be displayed if no other photo is selected
    .clearfix
      .lab
        = f.label :perex, '*Introduction'
      .con
        = f.text_area :perex, :rows => 5, :cols => 80, :class => 'button w100'
    .clearfix
      .lab
        = f.label :description, '*Body text'
      .con
        = f.text_area :description, :rows => 5, :cols => 80, :class => 'button w100'
    .clearfix
      .lab
        = f.label :tag_list, 'Tags'
      .con
        = f.text_field :tag_list, :size => 90, :class => 'button w100'
        %p.info (seperate with comma)
    .clearfix
      .lab
        = f.label :link, "Event\'s URL"
      .con
        = f.text_field :link, :class => 'button w100'