-#= render :partial => 'layouts/header'
!!! Strict
%html{ html_attrs('en') }
  %head
    %meta{ 'http-equiv' => 'content-type', :content => 'text/html', :charset => 'utf-8' }
    %meta{ 'http-equiv' => 'content-language', :content => 'en' }
    %meta{ :name => 'author', :content => 'Euro RSCG 4D Prague' }
    %meta{ :name => 'copyright', :content => '2008 Euro RSCG 4D' }
    %meta{ :name => 'description', :content => '4dtechlab is...' }
    %meta{ :name => 'keywords', :content => 'eurorscg, eurorscg4d' } 
    %title 4d techlab
    = stylesheet_link_tag 'application', 'addition', 'jquery.cluetip.css'
    = stylesheet_link_tag 'print', :media => 'print'
    /[if IE 6]
      = stylesheet_link_tag 'msie'
    = javascript_include_tag :defaults, 'jquery.cluetip.js', 'init.js'
  %body.hp
    %ul.noscreen
      %li
        %a{ :href => '#content' }Přeskočit na obsah         
      %li
        %a{ :href => '#mainMenu' }Přeskočit na menu
    %hr.hidden
    #view
      #head
        #logo
        .holder
          %h1#header.overlaid
            = link_to 'Tech Lab<span></span>', root_url
          %ul
            %li= link_to "Sign Up", new_user_path
            %li= link_to "Sign In", new_user_session_path
            %li.dark= link_to "Forgot your password?", new_password_reset_path
      %hr.hidden
      #content.holder
        = yield
      %hr.hidden
      #foot.holder
        %p.fr
          %a{ :href => 'http://www.eurorscg4d.cz' } &copy; 2008 Euro RSCG 4D